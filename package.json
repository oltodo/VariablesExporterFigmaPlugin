{
  "name": "variables-exporter",
  "type": "module",
  "version": "1.0.0",
  "description": "Export Figma variables to JSON-based format",
  "author": "",
  "license": "",
  "main": "main.js",
  "scripts": {
    "build": "npm run build-ts && npm run build-ui",
    "build-ts": "tsc -p tsconfig.plugin.json",
    "build-ui": "vite build",
    "watch": "concurrently \"npm run build-ts -- --watch\" \"npm run build-ui -- --watch\"",
    "lint": "eslint",
    "lint-fix": "eslint --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@tailwindcss/vite": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.17",
    "eslint": "^9.24.0",
    "eslint-plugin-format": "^1.0.1",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.5",
    "vite-plugin-singlefile": "^2.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
